<UserControl x:Class="PlatinumGymPro.Components.SportCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlatinumGymPro.Components"
             mc:Ignorable="d" 
            d:DesignWidth="300">
    <Border Background="#f6f6f6" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="1" Margin="10">
                <TextBlock Text="{Binding SportName}" FontWeight="Bold" FontSize="22"/>
                <TextBlock Text="{Binding Price}"  FontSize="14"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="2" Margin="10">
                <TextBlock Text="{Binding DaysCount}" FontSize="16"/>
                <TextBlock Text="{Binding DaysInWeek}" FontSize="14" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>

    </Border>
</UserControl>
