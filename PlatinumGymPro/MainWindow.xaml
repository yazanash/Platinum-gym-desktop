<Window x:Class="PlatinumGymPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlatinumGymPro"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:View="clr-namespace:PlatinumGymPro.Views.AuthView"
        xmlns:vms="clr-namespace:PlatinumGymPro.ViewModels"
        xmlns:controls="clr-namespace:PlatinumGymPro.Controls"
        xmlns:nav="clr-namespace:PlatinumGymPro.State.Navigator" xmlns:views="clr-namespace:PlatinumGymPro.Views"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        WindowState="Maximized"
         Icon="Resources/Logo_light.ico"
        Title="PlatinumGym - Release" Height="720" Width="1080">
    
    <Border Background="#fff"
            MouseDown="Border_MouseDown"
            MouseLeftButtonDown="Border_MouseLeftButtonDown"
            Padding="5 10"
            CornerRadius="10">
        <!--<views:HomeView/>-->
  
        <ContentControl Content="{Binding CurrentViewModel}" Grid.ColumnSpan="2"/>
    </Border>
</Window>
